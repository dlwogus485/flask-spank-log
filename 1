    [Unit]
    Description=Gunicorn instance for a Flask application
    After=network.target

    [Service]
    User=root
    Group=www-data
    WorkingDirectory=/var/www/flask_app
    ExecStart=/var/www/flask_app/venv/bin/gunicorn --workers 3 --bind unix:/tmp/flask_app.sock --timeout 120 app:app
    
    Restart=always
    PrivateTmp=true

    [Install]
    WantedBy=multi-user.target
    
